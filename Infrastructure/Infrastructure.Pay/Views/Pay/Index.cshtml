@model PaymentModel
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>درگاه پرداخت</title>
    <link href="/css/bootstrap.css" rel="stylesheet" />
    <link href="/css/bootstrap-rtl.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top: 50px;">
            <div class="col-lg-6 center-block" style="float: none;">
                <div class="panel panel-primary">
                    <div class="panel-heading">اتصال به درگاه پرداخت</div>
                    <div class="panel-body">
                        <form asp-action="Index" asp-controller="Pay" class="form-horizontal">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <label asp-for="Amount"></label>
                                </div>
                                <div class="col-sm-12">
                                    <input asp-for="Amount" class="form-control"/>
                                </div>
                                <div class="col-sm-12 text-left">
                                    <span asp-validation-for="Amount" style="color: red"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <br />
                                    <input type="submit" value="اتصال به درگاه پرداخت" class="btn btn-success" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12" style="color: red">@ViewBag.Error</div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>